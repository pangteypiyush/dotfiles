configuration {
	cycle: true;
	monitor: "-4"; /* not sure */
}

@theme "gruvbox"

listview {
	flow: horizontal;
	scrollbar: false;
	columns: 2;
	lines: 1;
}

window {
	children:[prompt, listview];
}

element normal.urgent {
	color: #fb4934;
}

element selected.urgent {
	background-color: #fb4934;
}

element normal.normal {
	color: #427b58;
}

element selected.normal {
	background-color: #427b58;
}
