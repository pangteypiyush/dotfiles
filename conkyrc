use_xft yes
xftfont DejaVu Sans:size=8
xftalpha 0.8
text_buffer_size 2048
update_interval 4
total_run_times 0
own_window no
own_window_transparent no
#own_window_type override
own_window_type desktop

# If own_window is yes, these window manager hints may be used
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

# Minimum size of text area
minimum_size 180 0
#maximum_width 200

draw_shades no
draw_outline no
draw_borders no
stippled_borders 0
border_margin 5
border_width 1

default_color white 
default_shade_color white
default_outline_color grey
own_window_colour grey

#alignment top_left
alignment top_right
#alignment bottom_left
#alignment bottom_right

gap_x 12
gap_y 8

no_buffers yes

uppercase no

# number of cpu samples to average
# set to 1 to disable averaging
cpu_avg_samples 2

# number of net samples to average
# set to 1 to disable averaging
net_avg_samples 2

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

# Add spaces to keep things from moving about? This only affects certain objects.
use_spacer none

TEXT
${voffset 140}
SYSTEM ${hr 2}
${alignc 24}${font Arial Black:size=14}ppang${font}
${alignc -8}${nodename}
${voffset 2}${font Arial Black:style=Bold:size=12}#!${font} ArchLinux ${alignr}Stable
${font OpenLogos:size=16}❯${font} Kernel: ${alignr}${kernel}
${font StyleBats:size=16}❯${font} CPU0: ${cpu cpu0}% ${alignr}${cpubar cpu0 8,60}
${font StyleBats:size=16}❯${font} CPU1: ${cpu cpu1}% ${alignr}${cpubar cpu1 8,60}
${font StyleBats:size=16}❯${font} CPU2: ${cpu cpu2}% ${alignr}${cpubar cpu2 8,60}
${font StyleBats:size=16}❯${font} CPU3: ${cpu cpu3}% ${alignr}${cpubar cpu3 8,60}
${font StyleBats:size=16}❯${font} RAM: $memperc% ${alignr}${membar 8,60}
${font StyleBats:size=16}❯${font} Uptime: ${alignr}${uptime}

DATE ${hr 2}
${alignc 19}${font Arial Black:size=18}${time %l:%M %p}${font}
${voffset 2}${alignc}${time %A, %d %B %Y}

NETWORK ${hr 2}
${if_existing /proc/net/route enp2s0}
${voffset -6}${font PizzaDude Bullets:size=11}❯${font} Up: ${upspeed enp2s0}${alignr}${upspeedgraph enp2s0 10,60 black black}
${voffset 4}${font PizzaDude Bullets:size=11}❯${font} Down: ${downspeed enp2s0}${alignr}${downspeedgraph enp2s0 10,60 black black}
${voffset 4}${font PizzaDude Bullets:size=11}❯${font} Upload: ${alignr}${totalup enp2s0}
${voffset 4}${font PizzaDude Bullets:size=11}❯${font} Download: ${alignr}${totaldown enp2s0}
${endif}
