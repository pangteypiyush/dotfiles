[core]
	editor = nvim
[color]
	ui = auto
[push]
	default = simple
[log]
	abbrevCommit = 1
[alias]
	lol = log --graph --decorate --pretty=oneline --all
[diff]
	tool = vimdiff
[user]
	email = gokuvsvegita@gmail.com
